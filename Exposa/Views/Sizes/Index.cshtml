@model IEnumerable<Exposa.Models.Size>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SizeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SizeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SizeId">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.SizeId">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.SizeId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
