@model IEnumerable<Exposa.Models.Color>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ColorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ColorName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ColorId">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.ColorId">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.ColorId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
