@model IEnumerable<Exposa.Models.SubCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategory_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Category_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SubCategory_Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.SubCategory_Id">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.SubCategory_Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
